{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "config": ["src/config"],
      "helpers": ["src/helpers"],
      "helpers/*": ["src/helpers/*"],
      "hooks": ["src/hooks"],
      "hooks/*": ["src/hooks/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "localConstants": ["src/localConstants"],
      "localConstants/*": ["src/localConstants/*"],
      "pages": ["src/pages"],
      "pages/*": ["src/pages/*"],
      "routes": ["src/routes"],
      "routes/*": ["src/routes/*"],
      "types": ["src/types"],
      "types/*": ["src/types/*"],
      "wrappers": ["src/wrappers"],
      "wrappers/*": ["src/wrappers/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
